extends ../layouts/layout

block content
  h1 BÃºsqueda en la base de datos de la NASA

  form(action="/nasa", method="get")
    input(type="text", name="q", placeholder="Ej: Jupiter", value=query)
    button(type="submit") Buscar

  if resultados
    each resultado in resultados
      .resultado
        if resultado.imagen
          img(src=resultado.imagen, alt=resultado.nombre)
        h2= resultado.nombre
        p= resultado.descripcion

  else if query
    p No se encontraron resultados para "#{query}"
